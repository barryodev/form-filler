{
  "manifest_version": 3,
  "name": "Form Filler",
  "version": "1.0",
  "description": "Reads data from a file and puts in a form",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_icon": { 
      "16": "images/icon-16.png",        
      "32": "images/icon-32.png",
      "48": "images/icon-48.png"      
    },
    "default_title": "Trigger Form Filler"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
